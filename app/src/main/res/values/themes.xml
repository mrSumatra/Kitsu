<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="KitsuTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray200</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Kitsu.Toolbar.Button" parent="Widget.AppCompat.Toolbar.Button.Navigation" />

    <style name="Widget.Kitsu.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?colorPrimary</item>
    </style>

    <style name="Widget.Kitsu" parent="android:Widget" />

    <style name="Widget.Kitsu.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="cornerRadius">@dimen/corners_radius_large</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Kitsu.Button.Primary">
        <item name="backgroundTint">@color/btn_primary_background</item>
        <item name="rippleColor">?colorSecondary</item>
    </style>

</resources>